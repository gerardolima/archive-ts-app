  "license": "MIT",
  "bugs": {
    "url": "https://github.com/gerardolima/ts-app/issues"
  },
  "homepage": "https://github.com/gerardolima/ts-app#readme",
  "devDependencies": {
    "chai": "^3.5.0",
    "coveralls": "^2.11.14",
    "istanbul": "^0.4.5",
    "mocha": "^3.1.0",
    "typescript": "^2.0.3"
  }
}
